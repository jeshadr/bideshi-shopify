{% render 'inline-media-styles' %} {%- comment -%} Render inline media styles for multimedia embeddings {%- endcomment -%}

{%- comment -%} Load tooltip scripts {%- endcomment -%}
<script src="{{ 'tooltip-syntax-processor.js' | asset_url }}" defer></script>
<script src="{{ 'simple-tooltips.js' | asset_url }}" defer></script>

<div class="article-page-background"></div>
<div class="article-page-wrapper">
  <div class="article-container">
    {%- comment -%} Logo and Title side by side {%- endcomment -%}
    <div class="article-header">
      <div class="article-header-logo">
        <a href="{{ routes.root_url }}" aria-label="Home">
          {%- if settings.logo != blank -%}
            <img
              src="{{ settings.logo | image_url: width: 300 }}"
              alt="{{ shop.name | escape }}"
              width="300"
              loading="eager"
            >
          {%- else -%}
            <span class="article-logo-fallback">à¦¬</span>
          {%- endif -%}
        </a>
      </div>

      {%- comment -%} Blog Title (THE BIDESHI TIMES) {%- endcomment -%}
      <h1 class="article-blog-title">THE BIDESHI TIMES</h1>
    </div>

    {%- comment -%} Double line separator {%- endcomment -%}
    <div class="article-separator article-separator--double"></div>

    {%- comment -%} Metadata section: Date | Tags | Author {%- endcomment -%}
    <div class="article-metadata">
      {%- comment -%} Date (left aligned) {%- endcomment -%}
      <div class="article-metadata__date">
        {{ article.published_at | date: "%B %d, %Y" | upcase }}
      </div>

      {%- comment -%} Tags (center aligned) {%- endcomment -%}
      <div class="article-metadata__tags">
        {%- if article.tags.size > 0 -%}
          {%- for tag in article.tags limit: 3 -%}
            {%- if forloop.first == false -%}
              {%- if forloop.last -%}
                <span class="article-tag-separator"> & </span>
              {%- else -%}
                <span class="article-tag-separator">, </span>
              {%- endif -%}
            {%- endif -%}
            <span class="article-tag">{{ tag | upcase }}</span>
          {%- endfor -%}
        {%- endif -%}
      </div>

      {%- comment -%} Author (right aligned) {%- endcomment -%}
      <div class="article-metadata__author">
        BY {{ article.metafields.custom.author | default: article.author | default: "MYESHA OWEN MUNRO" | upcase }}
      </div>
    </div>

    {%- comment -%} Single line separator {%- endcomment -%}
    <div class="article-separator article-separator--single"></div>

    {%- comment -%} Featured Image with Title Overlay {%- endcomment -%}
    <div class="article-featured-image-wrapper">
      {%- assign thumbnail_meta = article.metafields.custom.thumbnail -%}
      {%- assign thumbnail_value = thumbnail_meta.value -%}
      {%- assign thumbnail_image = blank -%}
      
      {%- comment -%} Try to get thumbnail from metafield {%- endcomment -%}
      {%- if thumbnail_value != blank -%}
        {%- for item in thumbnail_value limit: 1 -%}
          {%- assign thumbnail_image = item -%}
        {%- endfor -%}
      {%- endif -%}

      {%- if thumbnail_image -%}
        <img
          src="{{ thumbnail_image | image_url: width: 2000 }}"
          alt="{{ article.title | escape }}"
          width="2000"
          loading="eager"
          class="article-featured-image"
        >
      {%- elsif article.image -%}
        {{
          article.image
          | image_url: width: 2000
          | image_tag:
            width: article.image.width,
            height: article.image.height,
            class: 'article-featured-image',
            loading: 'eager',
            alt: article.title
        }}
      {%- endif -%}

      <div class="article-image-title-overlay">
        <h2>{{ article.title }}</h2>
      </div>
    </div>

    {%- comment -%} Article Content with Inline Media Support {%- endcomment -%}
    <div class="article-content rte processing-tooltips">
      <rte-formatter>
        {% render 'render-inline-media', content: article.content, article: article %}
      </rte-formatter>
    </div>

    {%- comment -%} Comments Section {%- endcomment -%}
    {% if blog.comments_enabled? %}
      <div class="article-comments-container">
        <h2 class="article-comments-heading">{{- 'blogs.article.comments_heading' | t: count: article.comments_count -}}</h2>

        <div class="article-comments">
          {% paginate article.comments by 10 %}
            {% for comment in article.comments %}
              <div class="article-comment">
                {{ comment.content }}
                <div class="article-comment__author">
                  <span class="article-comment__author-name">{{- comment.author -}}</span>
                  <span>{{- 'blogs.article.comment_author_separator' | t -}}</span>
                  <span class="article-comment__date">
                    {{- comment.created_at | time_tag: format: 'date' -}}
                  </span>
                </div>
              </div>
            {% endfor %}

            <div class="article-comments-pagination">
              {{- paginate | default_pagination -}}
            </div>
          {% endpaginate %}
        </div>

        {% render 'blog-comment-form', article: article, section_id: section.id %}
      </div>
    {% endif %}
  </div>
</div>

<script type="application/ld+json">
  {{ article | structured_data }}
</script>

{% stylesheet %}
  /**
   * Article Page - Newspaper Style Layout
   */
  
  /* Background color matching blog page */
  .article-page-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #ffffff;
    z-index: -1;
  }

  .article-page-wrapper {
    min-height: 100vh;
    background-color: #d9d9d9;
    padding: 3rem 2rem;
  }

  /* Main article container with border */
