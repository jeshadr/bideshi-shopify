<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="section color-{{ section.settings.color_scheme }}">
  <div
    class="
      spacing-style
      layout-panel-flex
      layout-panel-flex--column
      section-content-wrapper
      mobile-column
    "
    style="
      {% render 'layout-panel-style', settings: section.settings %}
      {% render 'spacing-style', settings: section.settings %}
    "
  >
    <!-- Newsletter Header -->
    <div class="newsletter-header">
      <div class="newsletter-masthead">
        <div class="newsletter-logo">â—€</div>
        <h1 class="newsletter-title">THE BIDESHI TIMES</h1>
      </div>
      <div class="newsletter-meta">
        <span class="newsletter-date">{{ article.published_at | date: "%B %d, %Y" | upcase }}</span>
        <span class="newsletter-category">{{ article.tags | first | upcase }}</span>
        <span class="newsletter-author">BY {{ article.author | upcase }}</span>
      </div>
    </div>

    <!-- Article Content -->
    <article class="newsletter-article">
      <!-- Article Title -->
      <header class="article-header">
        <h2 class="article-title">{{ article.title | upcase }}</h2>
      </header>

      <!-- Featured Image -->
      {%- if article.image -%}
        <div class="article-featured-image">
          <img 
            src="{{ article.image | img_url: '1200x' }}" 
            alt="{{ article.image.alt | escape }}"
            width="{{ article.image.width }}"
            height="{{ article.image.height }}"
            loading="lazy"
          />
        </div>
      {%- endif -%}

      <!-- Article Body -->
      <div class="article-content">
        <h3 class="article-introduction-heading">Introduction</h3>
        {{ article.content }}
      </div>
    </article>

    <!-- Comments Section -->
    {% if blog.comments_enabled? %}
      <div class="blog-post-comments-container">
        <h2 class="h3">{{- 'blogs.article.comments_heading' | t: count: article.comments_count -}}</h2>

        <div class="blog-post-comments">
          {% paginate article.comments by 10 %}
            {% for comment in article.comments %}
              <div class="blog-post-comment">
                {{ comment.content }}
                <div class="blog-post-comment__author">
                  <span class="blog-post-comment__author-name">{{- comment.author -}}</span>
                  <span>{{- 'blogs.article.comment_author_separator' | t -}}</span>
                  <span class="blog-post-comment__date">
                    {{- comment.created_at | time_tag: format: 'date' -}}
                  </span>
                </div>
              </div>
            {% endfor %}

            <div class="blog-post-comments-pagination">
              {{- paginate | default_pagination -}}
            </div>
          {% endpaginate %}
        </div>

        {% render 'blog-comment-form', article: article, section_id: section.id %}
      </div>
    {% endif %}
  </div>
</div>

<script type="application/ld+json">
  {{ article | structured_data }}
</script>

{% stylesheet %}
  /* Newsletter Header Styles */
  .newsletter-header {
    width: 100%;
    max-width: 900px;
    margin: 0 auto 40px;
    padding: 30px;
    border: 3px solid #000;
    background: #f5f5f5;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .newsletter-masthead {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin-bottom: 15px;
  }

  .newsletter-logo {
    font-size: 48px;
    font-weight: bold;
    line-height: 1;
  }

  .newsletter-title {
    font-family: 'Georgia', serif;
    font-size: 42px;
    font-weight: 700;
    letter-spacing: 8px;
    margin: 0;
    text-align: center;
  }

  .newsletter-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 15px;
    border-top: 2px solid #000;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 1px;
  }

  /* Article Styles */
  .newsletter-article {
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    background: #fff;
    padding: 40px;
    border: 2px solid #ddd;
  }

  .article-header {
    margin-bottom: 30px;
  }

  .article-title {
    font-family: 'Arial', sans-serif;
    font-size: 36px;
    font-weight: 700;
    letter-spacing: 2px;
    text-align: center;
    margin: 0;
    padding: 20px 0;
    background: linear-gradient(to bottom, transparent 50%, #fff9c4 50%);
  }

  .article-featured-image {
    width: 100%;
    margin-bottom: 30px;
    overflow: hidden;
  }

  .article-featured-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .article-content {
    font-family: 'Georgia', serif;
    font-size: 16px;
    line-height: 1.8;
    color: #333;
  }

  .article-introduction-heading {
    font-family: 'Georgia', serif;
    font-size: 20px;
    font-weight: 700;
    margin-bottom: 15px;
    color: #000;
  }

  .article-content p {
    margin-bottom: 20px;
  }

  /* Comments Section */
  .blog-post-comments-container {
    width: 100%;
    max-width: 900px;
    margin: 60px auto 0;
    padding: 40px;
    background: #f9f9f9;
    border: 1px solid #ddd;
  }

  .blog-post-comments {
    display: flex;
    flex-direction: column;
    gap: var(--gap-3xl);
  }

  .blog-post-comment__author {
    display: flex;
    align-items: center;
    gap: var(--gap-2xs);
    margin-top: var(--margin-md);
    font-size: var(--font-size--body-sm);
    color: rgb(var(--color-foreground-rgb) / var(--opacity-subdued-text));
  }

  .blog-post-comments-pagination {
    display: flex;
    justify-content: center;
    gap: var(--gap-2xs);
  }

  .blog-post-comments-pagination,
  .blog-post-comments-pagination a {
    color: var(--color-foreground);
  }

  .blog-post-comments-pagination .current {
    color: var(--color-foreground);
  }

  .blog-post-comments-pagination .current,
  .blog-post-comments-pagination a {
    display: block;
    padding: var(--padding-2xs) var(--padding-xs);
  }

  .blog-post-comments-pagination .current,
  .blog-post-comments-pagination a:hover {
    border-bottom: 1px solid var(--color-foreground);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .newsletter-title {
      font-size: 28px;
      letter-spacing: 4px;
    }

    .newsletter-logo {
      font-size: 32px;
    }

    .newsletter-meta {
      flex-direction: column;
      gap: 8px;
      align-items: flex-start;
    }

    .article-title {
      font-size: 24px;
      letter-spacing: 1px;
    }

    .newsletter-article {
      padding: 20px;
    }

    .newsletter-header {
      padding: 20px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:names.blog_post",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "select",
      "id": "content_direction",
      "label": "t:settings.direction",
      "options": [
        {
          "value": "column",
          "label": "t:options.vertical"
        }
      ],
      "default": "column",
      "visible_if": "{{ section.settings.gap < 0 }}"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": []
}
{% endschema %}