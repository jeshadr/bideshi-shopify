  /* Tooltip trigger styling */
  .has-tooltip {
    text-decoration: underline;
    text-decoration-style: dotted;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
    cursor: help;
    color: inherit;
    position: relative;
  }

  .has-tooltip:hover {
    text-decoration-color: #0066cc;
  }

  /* Tooltip popup */
  .article-tooltip-popup {
    position: absolute;
    z-index: 1000;
    visibility: hidden;
    opacity: 0;
    transition: opacity 0.2s ease-in-out, visibility 0.2s ease-in-out;
    pointer-events: none;
    max-width: 320px;
    width: max-content;
  }

  .article-tooltip-popup.visible {
    visibility: visible;
    opacity: 1;
    pointer-events: auto;
  }

  .article-tooltip-content {
    background: #ede3c9;
    color: #000000;
    padding: 0;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    border: none;
    font-size: 14px;
    line-height: 1.6;
    position: relative;
    overflow: visible;
  }

  /* Tooltip header with icon and title */
  .tooltip-header {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 12px 14px 8px 14px;
  }

  .tooltip-icon {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    color: #000000;
  }

  .tooltip-title {
    font-family: 'ZTFormom', 'Georgia', serif;
    font-size: 16px;
    font-weight: 600;
    font-style: italic;
    margin: 0;
    color: #000000;
    line-height: 1.3;
  }

  /* Tooltip image styling */
  .tooltip-image {
    display: block;
    width: calc(100% - 40px);
    height: auto;
    max-width: calc(100% - 40px);
    max-height: 220px;
    object-fit: cover;
    margin: 0 20px;
    border-radius: 12px;
  }

  .tooltip-text {
    padding: 10px 14px 14px 14px;
    font-family: 'ZTFormom', 'Georgia', serif;
    font-size: 13px;
    line-height: 1.5;
    color: #000000;
  }

  /* Arrow pointing to the trigger word */
  .article-tooltip-content::before {
    content: '';
    position: absolute;
    bottom: -7px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-top: 7px solid #ede3c9;
    z-index: 1;
  }

  /* Subtle shadow for arrow */
  .article-tooltip-content::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-top: 7px solid rgba(0, 0, 0, 0.1);
    z-index: 0;
  }

  /* Arrow flips when tooltip is below */
  .article-tooltip-popup.below .article-tooltip-content::before {
    bottom: auto;
    top: -7px;
    border-top: none;
    border-bottom: 7px solid #ede3c9;
  }

  .article-tooltip-popup.below .article-tooltip-content::after {
    bottom: auto;
    top: -8px;
    border-top: none;
    border-bottom: 7px solid rgba(0, 0, 0, 0.1);
  }

  /* Link styling inside tooltips */
  .article-tooltip-content a {
    color: #0066cc;
    text-decoration: underline;
  }

  .article-tooltip-content a:hover {
    color: #0052a3;
  }

  /* Comments Section */
  .article-comments-container {
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 3px solid #000;
  }

  .article-comments-heading {
    font-family: 'ZTFormom', 'Playfair Display', 'Georgia', serif;
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2rem;
  }

  .article-comments {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .article-comment {
    padding: 1.5rem;
    background-color: #f9f9f9;
    border-left: 3px solid #000;
  }

  .article-comment__author {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
    font-size: 0.875rem;
    font-style: italic;
    color: #666;
  }

  .article-comments-pagination {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 2rem;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 749px) {
    .article-page-wrapper {
      padding: 1.5rem 1rem;
    }

    .article-container {
      padding: 1.5rem;
    }

    .article-header {
      flex-direction: column;
      gap: 1rem;
    }

    .article-header-logo img {
      height: 60px;
    }

    .article-logo-fallback {
      font-size: 50px;
    }

    .article-blog-title {
      font-size: clamp(1.5rem, 8vw, 3.5rem);
      letter-spacing: 0.08em;
      text-align: center;
    }

    .article-featured-image-wrapper {
      min-height: 300px;
    }

    .article-featured-image {
      height: 300px;
    }

    .article-metadata {
      grid-template-columns: 1fr;
      gap: 1rem;
      text-align: center;
    }

    .article-metadata__date,
    .article-metadata__author {
      text-align: center;
    }

    .article-image-title-overlay {
      padding: 1rem;
    }

    .article-image-title-overlay h2 {
      font-size: 1.5rem;
    }

    .article-content {
      font-size: 1.07rem !important;
      line-height: 1.7;
    }

    .article-content *,
    .article-content p,
    .article-content div,
    .article-content span,
    .article-content li,
    .article-content ul,
    .article-content ol,
    .article-content.rte *,
    .article-content .rte * {
      font-size: 1.07rem !important;
    }

    /* Mobile header sizes */
    .article-content h1 {
      font-size: 2rem !important;
      line-height: 1.2;
    }

    .article-content h2 {
      font-size: 1.75rem !important;
      line-height: 1.3;
    }

    .article-content h3 {
      font-size: 1.5rem !important;
      line-height: 1.3;
    }

    .article-content h4 {
      font-size: 1.35rem !important;
      line-height: 1.4;
    }

    .article-content h5 {
      font-size: 1.2rem !important;
      line-height: 1.4;
    }

    .article-content h6 {
      font-size: 1.07rem !important;
      line-height: 1.5;
    }

    /* Mobile blockquotes */
    .article-content blockquote {
      font-size: 1.07rem !important;
      margin-inline: 1em 1.5em;
      margin-block: 2.5em;
      padding-inline-start: 0.6em;
    }

    .article-separator {
      margin: 0.35rem 0;
    }

    .article-metadata {
      margin: 0.35rem 0;
      padding: 0.15rem 0;
    }

    /* Mobile tooltip adjustments */
    .article-tooltip-popup {
      max-width: calc(100vw - 40px);
    }

    .tooltip-image {
      max-height: 180px;
      border-radius: 10px;
    }

    .tooltip-header {
      padding: 10px 12px 6px 12px;
    }

    .tooltip-title {
      font-size: 14px;
    }

    .tooltip-text {
      padding: 8px 12px 12px 12px;
      font-size: 12px;
    }

    .tooltip-icon {
      width: 18px;
      height: 18px;
    }
  }

  @media screen and (max-width: 1024px) and (min-width: 750px) {
    .article-header-logo img {
      height: 90px;
    }

    .article-logo-fallback {
      font-size: 70px;
    }

    .article-blog-title {
      font-size: clamp(2.5rem, 6vw, 6rem);
    }

    .article-featured-image-wrapper {
      min-height: 450px;
    }

    .article-featured-image {
      height: 450px;
    }

    .article-image-title-overlay h2 {
      font-size: 2rem;
    }
  }
