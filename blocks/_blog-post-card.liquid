

{%- comment -%}
  Title and description are used for the featured (first) card hover bar.
{%- endcomment -%}
{% capture title %}
  {% content_for 'block', id: 'heading', type: '_heading', text: article.title %}
{% endcapture %}

{% capture description %}
  {% content_for 'block', id: 'content', type: '_blog-post-description', article: article %}
{% endcapture %}

<div
  class="blog-post-card"
  style="--text-align: {{ block.settings.alignment }}"
>
  {%- comment -%} Thumbnail image: prefer custom.thumbnail metafield, fallback to article.image {%- endcomment -%}
  {%- assign thumbnail_meta = article.metafields.custom.thumbnail -%}
  {%- assign thumbnail_value = thumbnail_meta.value -%}
  {%- assign thumbnail_image = blank -%}
  
  {%- comment -%} Iterate through MediaListDrop to get first image {%- endcomment -%}
  {%- if thumbnail_value != blank -%}
    {%- for item in thumbnail_value limit: 1 -%}
      {%- assign thumbnail_image = item -%}
    {%- endfor -%}
  {%- endif -%}

  {%- comment -%} Featured article: image-only with hover bar {%- endcomment -%}
  {%- if thumbnail_image -%}
    <a class="blog-post-card__image-only" href="{{ article.url }}">
      <img
        src="{{ thumbnail_image | image_url: width: 2400 }}"
        alt="{{ article.title | escape }}"
        width="2400"
        height="1600"
        loading="lazy"
      >
    </a>
  {%- elsif article.image -%}
    <a class="blog-post-card__image-only" href="{{ article.url }}">
      {% content_for 'block', id: 'image-featured', type: '_blog-post-image', image: article.image %}
    </a>
  {%- endif -%}

  <div class="blog-post-card__hover">
    <div class="hover-bar">
      <div class="hover-bar__header">
        <span class="hover-bar__title">{{ title }}</span>
        <span class="hover-bar__icon">+</span>
      </div>
      <div class="hover-bar__body">
        <div class="hover-bar__desc">{{ description }}</div>
        <a href="{{ article.url }}" class="hover-bar__button">READ MORE</a>
      </div>
    </div>
  </div>

  {%- comment -%} Normal article cards: image + content below {%- endcomment -%}
  {%- if thumbnail_image -%}
    <div class="blog-post-card__image-container">
      <a href="{{ article.url }}">
        <img
          src="{{ thumbnail_image | image_url: width: 1200 }}"
          alt="{{ article.title | escape }}"
          width="1200"
          height="800"
          loading="lazy"
        >
      </a>
    </div>
  {%- elsif article.image -%}
    <div class="blog-post-card__image-container">
      <a href="{{ article.url }}">
        {% content_for 'block', id: 'image', type: '_blog-post-image', image: article.image %}
      </a>
    </div>
  {%- endif -%}

  <div class="blog-post-card__content">
    <div class="blog-post-card__header">
      <h3 class="blog-post-card__title">
        <a href="{{ article.url }}">{{ article.title }}</a>
      </h3>
    </div>
    
    <div class="blog-post-card__meta">
      <span class="blog-post-card__date">{{ article.published_at | date: "%m.%d.%Y" }}</span>
      {%- if article.tags.size > 0 -%}
        {%- for tag in article.tags limit: 2 -%}
          <span class="blog-post-card__tag-bubble">{{ tag }}</span>
        {%- endfor -%}
      {%- else -%}
        <span class="blog-post-card__tag-bubble">Culture</span>
        <span class="blog-post-card__tag-bubble">History</span>
      {%- endif -%}
      <span class="blog-post-card__author-bubble">
        {%- if article.metafields.custom.author -%}
          {{ article.metafields.custom.author }}
        {%- else -%}
          Myesha Owen Munro
        {%- endif -%}
      </span>
    </div>

    <div class="blog-post-card__body">
      {{ description }}
    </div>

    <a href="{{ article.url }}" class="blog-post-card__read-more">READ MORE</a>
  </div>
</div>

{% stylesheet %}
  .blog-post-card {
    display: flex;
    flex-direction: column;
    text-align: left;
    background-color: #d9d9d9;
    border: 2px solid #000;
    border-radius: 0;
    padding: 0;
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    /* Ensure borders don't increase rendered width and allow shrinking inside grid/flex */
    box-sizing: border-box;
    min-width: 0;
  }

  /* Hover effect for non-featured articles */
  .blog-post-item:not(.featured-article) .blog-post-card:hover {
    transform: scale(0.98);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }

  .blog-post-card__content {
    padding: 1.5rem;
    padding-bottom: 1.5rem;
    background-color: #d9d9d9;
    transition: background-color 0.3s ease;
    flex: 1;
    display: flex;
    flex-direction: column;
    /* Prevent intrinsic content from forcing horizontal overflow */
    min-width: 0;
  }

  .blog-post-card:hover .blog-post-card__content {
    background-color: #fec76f;
  }

  .blog-post-item .blog-post-card__image-container,
  .blog-post-item .blog-post-card__content {
    width: 100%;
  }

  /* Featured first article - image only with hover bar */
  .blog-post-item.featured-article .blog-post-card {
    flex-direction: column;
    background-color: transparent;
    border: none;
    border-radius: 0;
    padding: 0;
    position: relative;
  }

  /* Hide normal card elements on featured article */
  .blog-post-item.featured-article .blog-post-card__image-container {
    display: none;
  }

  .blog-post-item.featured-article .blog-post-card__content {
    display: none;
  }

  /* Hide hover bar and image-only on non-featured cards */
  .blog-post-item:not(.featured-article) .blog-post-card__hover {
    display: none;
  }

  .blog-post-item:not(.featured-article) .blog-post-card__image-only {
    display: none;
  }

  .blog-post-card__image-only {
    display: block;
    line-height: 0;
    width: 100%;
  }

  .blog-post-card__image-only img {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
  }

  /* Make featured article image edge-to-edge */
  .blog-post-item.featured-article .blog-post-card__image-only {
    width: 100vw;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
  }

  .blog-post-item.featured-article .blog-post-card__image-only img {
    width: 100%;
    display: block;
  }

  /* Hover title bar for featured article */
  .blog-post-item.featured-article .blog-post-card__hover {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: min(95%, 1400px);
    pointer-events: none; /* keep image link primary */
    z-index: 2;
  }

  .hover-bar {
    display: block;
    text-decoration: none;
    border: 3px solid #000;
    box-shadow: 0 4px 8px rgba(0,0,0,.2);
    pointer-events: auto;
    background: rgba(255,255,255,.95);
    color: #000;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }

  .hover-bar__header {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    padding: 2rem 2.5rem;
  }

  .hover-bar__title {
    flex: 1;
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.2;
    text-align: center;
  }

  .hover-bar__title .text-block {
    margin: 0 auto;
    padding: 0;
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
  }

  .hover-bar__icon {
    font-weight: 400;
    font-size: 2.5rem;
    line-height: 1;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    flex-shrink: 0;
  }

  .hover-bar__body {
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    padding: 0 2.5rem;
  }

  .hover-bar__desc {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .hover-bar__button {
    display: inline-block;
    background: #fff;
    color: #000;
    padding: 0.75rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
    transition: all 0.2s ease;
    border: 2px solid #000;
  }

  .hover-bar__button:hover {
    background: #000;
    color: #fff;
  }

  /* Hover state */
  .blog-post-item.featured-article .blog-post-card__hover:hover .hover-bar {
    background: #fbbf24;
  }

  .blog-post-item.featured-article .blog-post-card__hover:hover .hover-bar__icon {
    transform: rotate(45deg);
  }

  .blog-post-item.featured-article .blog-post-card__hover:hover .hover-bar__body {
    max-height: 600px;
    opacity: 1;
    padding: 0 2.5rem 2.5rem 2.5rem;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(6px); }
    to { opacity: 1; transform: translateY(0); }
  }


  /* Remove padding from image container */
  .blog-post-card__image-container {
    padding: 0;
    margin: 0;
    display: flex;
    background-color: #f5f5f5;
  }

  .blog-post-card__image-container img {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  /* Hide normal article cards for featured article */
  .blog-post-item.featured-article .blog-post-card__image-container,
  .blog-post-item.featured-article .blog-post-card__content {
    display: none;
  }

  /* Title styling */
  .blog-post-card__title {
    margin: 0 0 0.75rem 0;
    padding: 0 0 1rem 0;
  }

  .blog-post-card__title a {
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: 700;
    color: #000;
    line-height: 1.3;
    display: block;
  }

  .blog-post-card__title a:hover {
    color: #333;
  }

  /* Meta row styling */
  .blog-post-card__meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #666;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .blog-post-card__date {
    font-style: italic;
    color: #666;
  }

  /* Tag bubble styling */
  .blog-post-card__tag-bubble {
    display: inline-block;
    background-color: #d9d9d9;
    color: #333;
    padding: 0.35rem 0.85rem;
    border-radius: 50px;
    font-size: 0.8rem;
    font-style: italic;
    border: 1px solid #bbb;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.25);
  }

  /* Author bubble styling */
  .blog-post-card__author-bubble {
    display: inline-block;
    background-color: #d9d9d9;
    color: #333;
    padding: 0.35rem 0.85rem;
    border-radius: 50px;
    font-size: 0.8rem;
    font-style: italic;
    border: 1px solid #bbb;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.25);
  }

  /* Body/Description styling */
  .blog-post-card__body {
    flex: 1;
    margin-bottom: 1.5rem;
  }

  .blog-post-card__body .rte,
  .blog-post-card__body .text-block {
    font-size: 0.95rem;
    line-height: 1.6;
    color: #333;
    /* Make long URLs and unbroken text wrap on small screens */
    overflow-wrap: anywhere;
    word-break: break-word;
    hyphens: auto;
  }

  .blog-post-card__body .rte p {
    margin: 0;
  }

  /* Hide the default "Read more..." link in description */
  .blog-post-card__body .rte a {
    display: none;
  }

  /* Hide "Read more..." link in hover bar description as well */
  .hover-bar__desc a,
  .hover-bar__desc .text-block a,
  .hover-bar__desc .blog-post-card__content-text a {
    display: none !important;
  }

  /* READ MORE button styling */
  .blog-post-card__read-more {
    display: block;
    width: 100%;
    text-align: center;
    background-color: #d9d9d9;
    color: #000;
    padding: 1rem;
    border: 2px solid #000;
    text-decoration: none;
    font-weight: 700;
    font-size: 1rem;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
    margin-top: auto;
  }

  .blog-post-card__read-more:hover {
    background-color: #000;
    color: #fff;
  }

  /* Mobile responsive adjustments */
  @media screen and (max-width: 749px) {
    .blog-post-card__content {
      padding: 1rem;
    }

    .blog-post-card__title a {
      font-size: 1.25rem;
    }

    .blog-post-card__meta {
      font-size: 0.75rem;
      gap: 0.4rem;
    }

    .blog-post-card__date {
      font-size: 0.75rem;
    }

    .blog-post-card__tag-bubble,
    .blog-post-card__author-bubble {
      font-size: 0.7rem;
      padding: 0.3rem 0.7rem;
    }

    .blog-post-card__body .rte,
    .blog-post-card__body .text-block {
      font-size: 0.875rem;
    }

    .blog-post-card__read-more {
      padding: 0.875rem;
      font-size: 0.9rem;
    }

    /* Featured article mobile - position hover bar at bottom like a caption */
    .blog-post-item.featured-article .blog-post-card__hover {
      top: auto;
      bottom: 2rem;
      width: 90%;
    }
    
    .blog-post-item.featured-article .hover-bar__header {
      padding: 1rem 1.5rem;
      gap: 1rem;
    }
    
    .blog-post-item.featured-article .hover-bar__title,
    .blog-post-item.featured-article .hover-bar__title .text-block {
      font-size: 1.25rem;
      line-height: 1.3;
    }
    
    .blog-post-item.featured-article .hover-bar__icon {
      font-size: 1.5rem;
    }
    
    /* Make expanded content more compact on mobile */
    .blog-post-item.featured-article .hover-bar__body {
      padding: 0 1.5rem;
    }
    
    .blog-post-item.featured-article .hover-bar__desc {
      font-size: 0.9rem;
      line-height: 1.5;
      margin-bottom: 1rem;
    }
    
    .blog-post-item.featured-article .hover-bar__button {
      padding: 0.6rem 1.5rem;
      font-size: 0.8rem;
    }
    
    /* When expanded on mobile */
    .blog-post-item.featured-article .blog-post-card__hover:hover .hover-bar__body {
      padding: 0 1.5rem 1.5rem;
    }
  }
{% endstylesheet %}

{% schema %}
