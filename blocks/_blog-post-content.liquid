

<script src="{{ 'tooltip-syntax-processor.js' | asset_url }}" type="module" fetchpriority="low"></script>
<script src="{{ 'simple-tooltips.js' | asset_url }}" type="module" fetchpriority="low"></script>

<div class="blog-post-content rte processing-tooltips">
  <rte-formatter>
    <!--{{ article.content}} replacing this with Inline Media Shortcodes so that article doesn't render twice-->
    {% render 'render-inline-media', content: article.content, article: article %}
  </rte-formatter>
</div>

{% stylesheet %}
  .blog-post-content {
    max-width: var(--normal-content-width);
    margin: 0 auto;
  }

  /* Hide content while tooltips are being processed to prevent FOUC */
  .blog-post-content.processing-tooltips {
    opacity: 0;
    transition: opacity 0.15s ease-in;
  }

  .blog-post-content.tooltips-ready {
    opacity: 1;
  }

  /* Tooltip trigger styling */
  .has-tooltip {
    text-decoration: underline;
    text-decoration-style: dotted;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
    cursor: help;
    color: inherit;
    position: relative;
  }

  .has-tooltip:hover {
    text-decoration-color: var(--color-primary, #0066cc);
  }

  /* Tooltip popup */
  .article-tooltip-popup {
    position: absolute;
    z-index: 1000;
    visibility: hidden;
    opacity: 0;
    transition: opacity 0.2s ease-in-out, visibility 0.2s ease-in-out;
    pointer-events: none;
    max-width: 320px;
    width: max-content;
  }

  .article-tooltip-popup.visible {
    visibility: visible;
    opacity: 1;
    pointer-events: auto;
  }

  .article-tooltip-content {
    background: #ede3c9;
    color: #000000;
    padding: 0;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    border: none;
    font-size: 14px;
    line-height: 1.6;
    position: relative;
    overflow: visible;
  }

  /* Tooltip header with icon and title */
  .tooltip-header {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 12px 14px 8px 14px;
  }

  .tooltip-icon {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    color: #000000;
  }

  .tooltip-title {
    font-family: 'Georgia', serif;
    font-size: 16px;
    font-weight: 600;
    font-style: italic;
    margin: 0;
    color: #000000;
    line-height: 1.3;
  }

  /* Tooltip image styling */
  .tooltip-image {
    display: block;
    width: calc(100% - 40px);
    height: auto;
    max-width: calc(100% - 40px);
    max-height: 220px;
    object-fit: cover;
    margin: 0 20px;
    border-radius: 12px;
  }

  .tooltip-text {
    padding: 10px 14px 14px 14px;
    font-family: 'Georgia', serif;
    font-size: 13px;
    line-height: 1.5;
    color: #000000;
  }

  /* Arrow pointing to the trigger word */
  .article-tooltip-content::before {
    content: '';
    position: absolute;
    bottom: -7px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-top: 7px solid #ede3c9;
    z-index: 1;
  }

  /* Subtle shadow for arrow */
  .article-tooltip-content::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-top: 7px solid rgba(0, 0, 0, 0.1);
    z-index: 0;
  }

  /* Arrow flips when tooltip is below */
  .article-tooltip-popup.below .article-tooltip-content::before {
    bottom: auto;
    top: -7px;
    border-top: none;
    border-bottom: 7px solid #ede3c9;
  }

  .article-tooltip-popup.below .article-tooltip-content::after {
    bottom: auto;
    top: -8px;
    border-top: none;
    border-bottom: 7px solid rgba(0, 0, 0, 0.1);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .article-tooltip-popup {
      max-width: calc(100vw - 40px);
    }

    .tooltip-image {
      max-height: 180px;
      border-radius: 10px;
    }

    .tooltip-header {
      padding: 10px 12px 6px 12px;
    }

    .tooltip-title {
      font-size: 14px;
    }

    .tooltip-text {
      padding: 8px 12px 12px 12px;
      font-size: 12px;
    }

    .tooltip-icon {
      width: 18px;
      height: 18px;
    }
  }

  /* Link styling inside tooltips */
  .article-tooltip-content a {
    color: var(--color-primary, #0066cc);
    text-decoration: underline;
  }

  .article-tooltip-content a:hover {
    color: var(--color-primary-hover, #0052a3);
  }
{% endstylesheet %}

