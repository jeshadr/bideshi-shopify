

<script src="{{ 'tooltip-syntax-processor.js' | asset_url }}" type="module" fetchpriority="low"></script>
<script src="{{ 'simple-tooltips.js' | asset_url }}" type="module" fetchpriority="low"></script>

<div class="blog-post-content rte processing-tooltips">
  <rte-formatter>
    {{ article.content }}
  </rte-formatter>
</div>

{% stylesheet %}
  .blog-post-content {
    max-width: var(--normal-content-width);
    margin: 0 auto;
  }

  /* Hide content while tooltips are being processed to prevent FOUC */
  .blog-post-content.processing-tooltips {
    opacity: 0;
    transition: opacity 0.15s ease-in;
  }

  .blog-post-content.tooltips-ready {
    opacity: 1;
  }

  /* Tooltip trigger styling */
  .has-tooltip {
    text-decoration: underline;
    text-decoration-style: dotted;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
    cursor: help;
    color: inherit;
    position: relative;
  }

  .has-tooltip:hover {
    text-decoration-color: var(--color-primary, #0066cc);
  }

  /* Tooltip popup */
  .article-tooltip-popup {
    position: absolute;
    z-index: 1000;
    visibility: hidden;
    opacity: 0;
    transition: opacity 0.2s ease-in-out, visibility 0.2s ease-in-out;
    pointer-events: none;
    max-width: 315px;
    width: max-content;
  }

  .article-tooltip-popup.visible {
    visibility: visible;
    opacity: 1;
    pointer-events: auto;
  }

  .article-tooltip-content {
    background: #ffffff;
    color: #000000;
    padding: 11px 14px;
    border-radius: 4px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    border: 1px solid rgba(0, 0, 0, 0.1);
    font-size: 13px;
    line-height: 1.5;
    position: relative;
  }

  /* Tooltip image styling */
  .tooltip-image {
    display: block;
    width: 100%;
    height: auto;
    max-width: 100%;
    max-height: 270px;
    object-fit: contain;
    margin: 0;
    border-radius: 4px 4px 0 0;
  }

  /* Adjust tooltip size for images */
  .article-tooltip-content:has(.tooltip-image) {
    padding: 0;
    max-width: 360px;
  }

  .tooltip-text {
    padding: 11px 14px;
  }

  /* Arrow pointing to the trigger word */
  .article-tooltip-content::before {
    content: '';
    position: absolute;
    bottom: -6px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-top: 6px solid #ffffff;
    filter: drop-shadow(0 2px 1px rgba(0, 0, 0, 0.05));
  }

  .article-tooltip-content::after {
    content: '';
    position: absolute;
    bottom: -7px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 7px solid transparent;
    border-right: 7px solid transparent;
    border-top: 7px solid rgba(0, 0, 0, 0.1);
    z-index: -1;
  }

  /* Arrow flips when tooltip is below */
  .article-tooltip-popup.below .article-tooltip-content::before {
    bottom: auto;
    top: -6px;
    border-top: none;
    border-bottom: 6px solid #ffffff;
  }

  .article-tooltip-popup.below .article-tooltip-content::after {
    bottom: auto;
    top: -7px;
    border-top: none;
    border-bottom: 7px solid rgba(0, 0, 0, 0.1);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .article-tooltip-popup {
      max-width: calc(100vw - 40px);
    }

    .tooltip-image {
      max-height: 180px;
    }

    .article-tooltip-content:has(.tooltip-image) {
      max-width: calc(100vw - 40px);
    }
  }

  /* Link styling inside tooltips */
  .article-tooltip-content a {
    color: var(--color-primary, #0066cc);
    text-decoration: underline;
  }

  .article-tooltip-content a:hover {
    color: var(--color-primary-hover, #0052a3);
  }
{% endstylesheet %}

