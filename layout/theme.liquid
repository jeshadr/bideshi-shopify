<!doctype html>
<html
  class="no-js{% if request.design_mode %} shopify-design-mode{% endif %}"
  lang="{{ request.locale.iso_code }}"
>
  <head>
    {%- render 'stylesheets' -%}

    {%- liquid
      render 'meta-tags'


      echo 'custom.css' | asset_url | stylesheet_tag: preload: true
    
    %}

    {%- liquid
  # Build BODY font stack
  assign body_stack = "Arial, 'Helvetica Neue', Helvetica, system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif"
  case settings.body_font_family
    when 'georgia'     then assign body_stack = "'Georgia', Georgia, 'Times New Roman', serif"
    when 'baloo_da_2'  then assign body_stack = "'Baloo Da 2', Arial, sans-serif"
    when 'akkhor'      then assign body_stack = "'Akkhor', 'Noto Serif Bengali', serif"
    when 'arial'       then assign body_stack = "Arial, 'Helvetica Neue', Helvetica, system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif"
  endcase

  # Build HEADING font stack
  assign heading_stack = "'Georgia', Georgia, 'Times New Roman', serif"
  case settings.heading_font_family
    when 'baloo_da_2' then assign heading_stack = "'Baloo Da 2', Arial, sans-serif"
    when 'akkhor'     then assign heading_stack = "'Akkhor', 'Noto Serif Bengali', serif"
    when 'georgia'    then assign heading_stack = "'Georgia', Georgia, 'Times New Roman', serif"
  endcase

  # Build ACCENT font stack
  assign accent_stack = "'Baloo Da 2', Arial, sans-serif"
  case settings.accent_font_family
    when 'georgia'    then assign accent_stack = "'Georgia', Georgia, 'Times New Roman', serif"
    when 'akkhor'     then assign accent_stack = "'Akkhor', 'Noto Serif Bengali', serif"
    when 'baloo_da_2' then assign accent_stack = "'Baloo Da 2', Arial, sans-serif"
  endcase

  # Sizes / line heights
  assign p_size   = settings.paragraph_size        | default: 16
  assign p_line   = settings.paragraph_line_height | default: 1.6
  assign h1_size  = settings.h1_size               | default: 40
  assign h1_line  = settings.h1_line_height        | default: 1.2
  assign h2_size  = settings.h2_size               | default: 32
  assign h2_line  = settings.h2_line_height        | default: 1.3
-%}

<style>
  :root{
    --font-body: {{ body_stack }};
    --font-heading: {{ heading_stack }};
    --font-accent: {{ accent_stack }};

    --p-size: {{ p_size }}px;
    --p-line: {{ p_line }};

    --h1-size: {{ h1_size }}px;
    --h1-line: {{ h1_line }};
    --h2-size: {{ h2_size }}px;
    --h2-line: {{ h2_line }};
  }
</style>

  
    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}"
      >
    {%- endif -%}

    {% comment %} This a way to wait for main content to load when navigating to a new page so that the view transitions can work consistently {% endcomment %}
    <link
      rel="expect"
      href="#MainContent"
      blocking="render"
      id="view-transition-render-blocker"
    >

    {%- render 'meta-tags' -%}
    {%- render 'fonts' -%}
    {%- render 'scripts' -%}
    {%- render 'theme-styles-variables' -%}
    {%- render 'color-schemes' -%}

    {% if request.design_mode %}
      {%- render 'theme-editor' -%}
    {% endif %}

    {{ content_for_header }}
  </head>

  <body class="page-width-{{ settings.page_width }} card-hover-effect-{{ settings.card_hover_effect }}">
    {% render 'skip-to-content-link', href: '#MainContent', text: 'accessibility.skip_to_text' %}
    <div id="header-group">
      {% sections 'header-group' %}
    </div>

    <script
      src="{{ 'critical.js' | asset_url }}"
      type="module"
      async
      blocking="render"
    ></script>

    <main
      id="MainContent"
      class="content-for-layout"
      role="main"
      data-page-transition-enabled="{{ settings.page_transition_enabled }}"
      data-product-transition="{{ settings.transition_to_main_product }}"
      data-template="{{ template }}"
    >
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    {% render 'search-modal' %}

    {% if settings.quick_add or settings.mobile_quick_add %}
      {% render 'quick-add-modal' %}
    {% endif %}
  </body>
</html>
