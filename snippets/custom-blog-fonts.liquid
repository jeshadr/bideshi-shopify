{%- comment -%} Custom ZT Formom font for blog pages {%- endcomment -%}
<style>
  @font-face {
    font-family: 'ZTFormom';
    src: url('{{ 'fonts/ZT Formom.woff2' | asset_url }}') format('woff2'),
         url('{{ 'fonts/ZT Formom.woff' | asset_url }}') format('woff'),
         url('{{ 'fonts/ZT Formom.ttf' | asset_url }}') format('truetype');
    font-style: normal;
    font-weight: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'ZTFormom';
    src: url('{{ 'fonts/ZT Formom Italic.woff2' | asset_url }}') format('woff2'),
         url('{{ 'fonts/ZT Formom Italic.woff' | asset_url }}') format('woff'),
         url('{{ 'fonts/ZT Formom Italic.ttf' | asset_url }}') format('truetype');
    font-style: italic;
    font-weight: normal;
    font-display: swap;
  }
</style>

